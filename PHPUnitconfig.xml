<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    colors="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false"
    bootstrap="./tests/bootstrap.php"
>
    <php>
        <ini name="memory_limit" value="-1"/>
        <ini name="apc.enable_cli" value="1"/>
    </php>

    <!-- Add any additional test suites you want to run here -->
    <testsuites>
        <testsuite name="Unit">
            <directory>./tests/TestCase</directory>
            <exclude>./tests/TestCase/Selenium</exclude>
            <exclude>./tests/TestCase/HTML5Validation</exclude>
        </testsuite>
        <testsuite name="Functional">
            <directory>./tests/TestCase/Selenium</directory>           
        </testsuite>
        <!-- Add plugin test suites here. -->
    </testsuites>

    <!-- Setup a listener for fixtures -->
    <listeners>
        <listener
            class="\Cake\TestSuite\Fixture\FixtureInjector"
            file="./vendor/cakephp/cakephp/src/TestSuite/Fixture/FixtureInjector.php">
            <arguments>
                <object class="\Cake\TestSuite\Fixture\FixtureManager" />
            </arguments>
        </listener>            
        <listener class="PHPUnit_Extensions_Selenium2TestCase_ScreenshotListener">
            <arguments>
                <string>./build/selenium</string>
            </arguments>
        </listener>
    </listeners>

    <filter>
        <blacklist>
            <directory>*</directory>
            <exclude>
                <file>src</file>
            </exclude>
        </blacklist>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
            <exclude>
                <directory>src/Console</directory>
                <directory>src/Shell</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
